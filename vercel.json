{
    "version": 2,
    "builds": [
        {
            "src": "functions/src/app/api.py",
            "use": "@vercel/python"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "functions/src/app/api.py"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}